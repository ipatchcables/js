let condition;

do {
const userInput = prompt("Enter q to exit");
  if (userInput === "q") {
    condition === false;
  } else {
    condition = true;
  }
  
  
  let totalMoney = 100;

do {
  checkIfCanPurchase ()
} while (totalMoney > 500);

function checkIfCanPurchase() {
  if (totalMoney > 500) {
    console.log("Can purchase");
  } else {
    console.log("Can't purchase")
}
}
  } while (condition);
