//Loops
// Quick and easy way to do something repeatedly
/*
Many types of loops but all do basically the same thing:
repeat something (i.e. an action a set number of times)
*/

//While Loop
// While loop

/*
while (condition) {
  statement
}
*/

let numberOfLoops = 0; // Infinite loop
while(numberOfLoops < 10){
console.log("I am looping");
  console.log(numberOfLoops);
  numberOfLoops += 1;
}
let num1 = 0;
let num2 = 0;
while (num1 < 100) { // while less than 100
  num1 += 5; // iterate by 5
  console.log(num1);
  num2 += num1; // 
}
console.log(num2)

let num1 = 0;
let num2 = 0;
while (num1 < 100) { // while less than 100
  num1 += 5; // iterate by 5
  console.log(num1);
  loopDeloop() // Loop over a function
}
function loopDeloop() {
  console.log("I'm looping")
}
