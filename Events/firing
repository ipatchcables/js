const clickDiv = document.getElementById("clicky");
const clickableButton = clickDiv.querySelector("button");

clickableButton.addEventListener("click", logEvent);

function logEvent(e) {
  clickableButton.innerText = "Plz no click";
  console.log(e.type);
}


