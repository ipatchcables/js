/*
"A function is a JavaScript procedure - a set of statements that performs a task or calculates a value.[...]"
*/
//JavaScript is untyped. You do not have to specify the type when delcaring variables.
// Hoisting is when the functions are brought to the top of the code when being compiled. Functions can be declared anywhere.
function sayHi () {
  console.log("Hello")
}
sayHi();

function check(){ //  If/else Function
  myName = "chris";
  if (!myName) {
    console.log("Is Chris")
    } else {
      console.log("Is not Chris")
    }
}
check()

function args(userName, age){ // Take Args
  console.log("Hi" + " " + userName + " " + "is" + " " + age);
  
}
args("Billy", 22)

function numberDoubler(num){ // Return Value
  return num *2;
}

console.log(numberDoubler(10));
