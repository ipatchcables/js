// If statement
const shouldSayHi = true;

if (shouldSayHi === true) {
  console.log("Derp")
}

// If/else statement
const shouldSayHi2 = false;

if (shouldSayHi2 === true) { // use ====
  console.log("Derp") 
} else {
  console.log("Nope")
}

const bankAccountBalance = 124; // nested if
const costOfItem = 123
const tax = 0.50;

if (bankAccountBalance >= costOfItem) {
  console.log("Balance OK");
  if(tax >= 0.50) {
    console.log("Tax")
  }
}
